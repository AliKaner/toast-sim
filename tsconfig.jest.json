{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["jest", "@types/jest"]
  },
  "include": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules"]
}
